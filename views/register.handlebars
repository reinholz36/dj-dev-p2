{{> nav/nav-block user=false register=true}}

<div class="container">
  <div class="row">
    <div class="col col-md-12">
      <header class="create-user-wrap header-wrap" align="center">
        <h1 class="text-white">Create Your Account</h1>
        <h3 id="create-err-msg"></h3>
      </header>

      <h3 id="err-msg"></h3>

      <form id= "create-form">
        <div class="form-row">
          <div class="form-group col-md-12">
            <label class="text-white" for="inputFirst">First Name</label>
            <input type="text" class="form-control" id="inputFirst" placeholder="Enter First Name Here">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-12">
            <label class="text-white" for="inputLast">Last Name</label>
            <input type="text" class="form-control" id="inputLast" placeholder="Enter Last Name Here">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-12">
            <label class="text-white" for="inputEmail">Email</label>
            <input type="email" class="form-control" id="inputEmail" placeholder="Enter Email Here">
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-12">
            <label class="text-white" for="inputPassword">Password</label>
            <input type="password" class="form-control" id="inputPassword" placeholder="Enter Password Here">
          </div>
        </div>

        <div>
          <h2 id="message"></h2>
        </div>

        <button type="submit" id="add-user" class="btn btn-dark">Submit</button>
      </form>
    </div>
  </div>
</div>