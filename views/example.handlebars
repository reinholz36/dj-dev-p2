{{> nav/nav-block}}

<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h2 class="msg-margin text-center">{{msg}}</h2>
        <form class="clearfix mb-4" action="POST">

          <div class="form-group">
            <label class="text-white" for="example-text" >What would you name your dream?</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Enter the name of your dream">
          </div>
          <div class="form-group">
            <label class="text-white" for="example-description">How would you describe your dream?</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter description, click Dream On to submit"></textarea>
          </div>
  
              <label class="text-white" for="emoji">How are you feeling? </label>
              <br>
              <select id="emoji" class="form-select form-select-lg mb-3 borderonentryq" aria-label=".form-select-lg example">
                <option selected>--Select Mood--</option>
                <option value="😎">😎</option>
                <option value="😄">😄</option>
                <option value="🥰">🥰</option>
                <option value="😐">😐</option>
                <option value="😥">😥</option>
                <option value="😡">😡</option>
                <option value="💩">💩</option>
                <option value="☠️">☠️</option>
              </select>
            
            <br>
          <button id="submit" class="btn btn-dark float-right" >Dream On &#129304</button>
        </form>
        <h4 class="text-center"> Past Journal Entries:</h4>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          
          <li data-id="{{this.id}}" class="list-group-item">
            
              
                {{format_date this.createdAt}} 
                
                  <button class="btn btn-dark float-right delete"><i class="fa-solid fa-trash-can"></i></button>

                  <button class="btn btn-dark float-right editDream editbuttonspace"><i class="fa-solid fa-pencil"></i></button>

            <a class="btn btn-dark text-white pastjournalentrymarker float-right" href="example/{{this.id}}"><i class="fa-solid fa-expand"></i>
            </a>
            <br>  
             
                
                  <strong>Dream Name:</strong> 
                  <p contenteditable="true" id="editText">{{this.text}}</p> 
                  <strong>Description:</strong>
                  <p contenteditable="true" id="editDescription">{{this.description}}</p>
                  <strong>How you were feeling:</strong>
                  <p contenteditable="true" id="editEmoji">{{this.emoji}}</p>
        
                
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script src="/assets/js/example.js"></script>

